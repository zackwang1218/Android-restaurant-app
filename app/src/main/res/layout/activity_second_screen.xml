<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zackwang.testapp.SecondScreen"
    android:id="@+id/second_screen">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/tableRow2">

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText"
            android:background="#7ff5b9"
            android:layout_gravity="top|center_vertical"
            android:layout_column="0" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText2"
            android:background="#4ac1bd"
            android:layout_gravity="top|center_vertical"
            android:layout_column="1" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText3"
            android:background="#f63c54"
            android:layout_gravity="top|center_vertical"
            android:layout_column="2" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText4"
            android:background="#feb848"
            android:layout_gravity="top|center_vertical"
            android:layout_column="3" />

    </TableRow>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookIcon"
        android:src="@mipmap/lg_book"
        android:layout_below="@+id/loginLine"
        android:layout_toRightOf="@+id/button_back"
        android:layout_toEndOf="@+id/button_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bookr"
        android:id="@+id/logoText"
        android:layout_alignTop="@+id/bookIcon"
        android:layout_toRightOf="@+id/bookIcon"
        android:layout_alignBottom="@+id/bookIcon"
        android:fontFamily="courier"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="____________________________________________________"
        android:id="@+id/loginLine"
        android:layout_below="@+id/button_back"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back"
        android:onClick="secondScreen_onClick_back"
        android:src="@mipmap/nv_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tableRow2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_menu1"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/button_back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/nv_menu" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="BOOK"
        android:id="@+id/button_book"
        android:onClick="OnClickBook"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="109dp"
        android:layout_above="@+id/button_logout"
        android:layout_alignRight="@+id/button_logout"
        android:layout_alignEnd="@+id/button_logout" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="MENU"
        android:id="@+id/button_menu1"
        android:onClick="OnClickMenu"
        android:layout_alignTop="@+id/button_book"
        android:layout_toRightOf="@+id/button_navigation"
        android:layout_toEndOf="@+id/button_navigation" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Navigation"
        android:onClick="OnClick_getUserTest"
        android:id="@+id/button_navigation"
        android:layout_alignTop="@+id/button_contact"
        android:layout_alignLeft="@+id/button_book"
        android:layout_alignStart="@+id/button_book" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Contact"
        android:id="@+id/button_contact"
        android:layout_below="@+id/button_menu1"
        android:layout_alignLeft="@+id/button_menu1"
        android:layout_alignStart="@+id/button_menu1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button_logout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:onClick="OnClick_logout" />

</RelativeLayout>
