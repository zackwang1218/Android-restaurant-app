<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zackwang.testapp.activities.RegisterActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/tableRow">

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText"
            android:background="#7ff5b9"
            android:layout_gravity="top|center_vertical"
            android:layout_column="0" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText2"
            android:background="#4ac1bd"
            android:layout_gravity="top|center_vertical"
            android:layout_column="1" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText3"
            android:background="#f63c54"
            android:layout_gravity="top|center_vertical"
            android:layout_column="2" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText4"
            android:background="#feb848"
            android:layout_gravity="top|center_vertical"
            android:layout_column="3" />

    </TableRow>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookIcon"
        android:layout_marginTop="78dp"
        android:src="@mipmap/lg_book"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bookr"
        android:id="@+id/logoText"
        android:layout_toRightOf="@+id/bookIcon"
        android:fontFamily="courier"
        android:textSize="50dp"
        android:layout_alignTop="@+id/bookIcon"
        android:layout_above="@+id/loginLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________________________"
        android:id="@+id/loginLine"
        android:layout_marginTop="70dp"
        android:focusableInTouchMode="false"
        android:fontFamily="aril"
        android:textColor="#756f7c"
        android:layout_below="@+id/bookIcon"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/register_username"
        android:fontFamily="Arial"
        android:textColor="#756f7c"
        android:layout_below="@+id/loginLine"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView4"
        android:text="jeff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:layout_below="@+id/register_username"
        android:layout_alignLeft="@+id/register_username"
        android:layout_alignStart="@+id/register_username"
        android:layout_alignRight="@+id/register_username"
        android:layout_alignEnd="@+id/register_username"
        android:textColor="#756f7c"
        android:layout_marginTop="10dp"
        android:text="123" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@mipmap/nv_menu"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:onClick="register_DirectToHomeScreen"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/nv_back"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="________________________________________________________"
        android:id="@+id/tp_line"
        android:focusableInTouchMode="false"
        android:fontFamily="aril"
        android:textColor="#756f7c"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="________________________________________________________"
        android:id="@+id/tp_line2"
        android:focusableInTouchMode="false"
        android:fontFamily="aril"
        android:textColor="#756f7c"
        android:layout_alignBottom="@+id/loginLine"
        android:layout_toEndOf="@+id/bookIcon"
        android:layout_alignLeft="@+id/tp_line"
        android:layout_alignStart="@+id/tp_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/qt_title1"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/tp_line2"
        android:layout_alignLeft="@+id/tp_line2"
        android:layout_alignStart="@+id/tp_line2"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/textView4"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/register_username"
        android:layout_alignLeft="@+id/tp_line2"
        android:layout_alignStart="@+id/tp_line2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView5"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/register_password"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/textView6"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_below="@+id/register_password"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/textView7"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/loginLine"
        android:layout_toStartOf="@+id/loginLine"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/register_fullname"
        android:fontFamily="Arial"
        android:textColor="#756f7c"
        android:text="jeff chen"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_alignRight="@+id/register_password"
        android:layout_alignEnd="@+id/register_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:id="@+id/textView8"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/register_email"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/register_email"
        android:fontFamily="Arial"
        android:textColor="#756f7c"
        android:layout_below="@+id/register_fullname"
        android:layout_alignRight="@+id/register_fullname"
        android:layout_alignEnd="@+id/register_fullname"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/register_fullname"
        android:layout_alignStart="@+id/register_fullname"
        android:text="jeff@gmail.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:id="@+id/textView9"
        android:textColor="#756f7c"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_below="@+id/register_email"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/register_phone"
        android:fontFamily="Arial"
        android:textColor="#756f7c"
        android:layout_below="@+id/register_email"
        android:layout_alignLeft="@+id/register_email"
        android:layout_alignStart="@+id/register_email"
        android:layout_alignRight="@+id/register_email"
        android:layout_alignEnd="@+id/register_email"
        android:layout_marginTop="10dp"
        android:text="123" />

    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Cancel"
        android:id="@+id/tp_cancelBtn"
        android:onClick="register_DirectToHomeScreen"
        android:background="#ee5f45"
        android:fontFamily="Arial"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tp_line3"
        android:layout_alignStart="@+id/tp_line3"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="________________________________________________________"
        android:id="@+id/tp_line3"
        android:focusableInTouchMode="false"
        android:fontFamily="aril"
        android:textColor="#756f7c"
        android:layout_alignTop="@+id/tp_cancelBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Apply"
        android:id="@+id/button3"
        android:onClick="register_registerAccount"
        android:background="#34cf95"
        android:fontFamily="Arial"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/tp_cancelBtn"
        android:layout_alignRight="@+id/tp_line3"
        android:layout_alignEnd="@+id/tp_line3"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView5"
        android:src="@mipmap/ic_right"
        android:layout_alignTop="@+id/register_username"
        android:layout_alignRight="@+id/tp_line2"
        android:layout_alignEnd="@+id/tp_line2" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView6"
        android:src="@mipmap/ic_right"
        android:layout_alignRight="@+id/tp_line2"
        android:layout_alignEnd="@+id/tp_line2"
        android:layout_below="@+id/register_password" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView7"
        android:src="@mipmap/ic_right"
        android:layout_alignTop="@+id/register_fullname"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView8"
        android:src="@mipmap/ic_right"
        android:layout_alignTop="@+id/register_email"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView9"
        android:src="@mipmap/ic_right"
        android:layout_alignTop="@+id/register_phone"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView10"
        android:src="@mipmap/ic_minus"
        android:layout_alignTop="@+id/register_password"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/spinner_title"
        android:layout_alignLeft="@+id/register_fullname"
        android:layout_alignStart="@+id/register_fullname"
        android:layout_alignRight="@+id/register_fullname"
        android:layout_alignEnd="@+id/register_fullname"
        android:layout_alignTop="@+id/imageView6"
        android:layout_above="@+id/register_fullname" />

</RelativeLayout>
