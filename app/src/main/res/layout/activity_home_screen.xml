<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginPage"
    android:weightSum="1"
    android:background="#ffffff">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/tableRow">

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText"
            android:background="#7ff5b9"
            android:layout_gravity="top|center_vertical"
            android:layout_column="0" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText2"
            android:background="#4ac1bd"
            android:layout_gravity="top|center_vertical"
            android:layout_column="1" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText3"
            android:background="#f63c54"
            android:layout_gravity="top|center_vertical"
            android:layout_column="2" />

        <EditText
            android:layout_width="96dp"
            android:layout_height="8dp"
            android:id="@+id/editText4"
            android:background="#feb848"
            android:layout_gravity="top|center_vertical"
            android:layout_column="3" />

    </TableRow>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookIcon"
        android:layout_marginTop="78dp"
        android:src="@mipmap/lg_book"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bookr"
        android:id="@+id/logoText"
        android:layout_alignTop="@+id/bookIcon"
        android:layout_toRightOf="@+id/bookIcon"
        android:layout_alignBottom="@+id/bookIcon"
        android:fontFamily="courier"
        android:textSize="50dp"
        android:layout_marginRight="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________________________"
        android:id="@+id/loginLine"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/bookIcon"
        android:focusableInTouchMode="false"
        android:fontFamily="aril"
        android:layout_alignRight="@+id/logoText"
        android:layout_alignEnd="@+id/logoText"
        android:layout_marginRight="10dp"
        android:textColor="#756f7c" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/login_username"
        android:layout_below="@+id/loginLine"
        android:layout_marginTop="51dp"
        android:text="zack"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:fontFamily="Arial"
        android:textColor="#756f7c" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password"
        android:text="admin"
        android:layout_below="@+id/login_username"
        android:layout_alignLeft="@+id/login_username"
        android:layout_alignStart="@+id/login_username"
        android:layout_alignRight="@+id/login_username"
        android:layout_alignEnd="@+id/login_username"
        android:textColor="#756f7c" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp
        "
        android:text="Register"
        android:id="@+id/button_login"
        android:onClick="home_screen_DirectToRegister"
        android:background="#756f7c"
        android:layout_alignStart="@+id/login_password"
        android:layout_below="@+id/login_password"
        android:layout_toStartOf="@+id/logoText"
        android:textSize="20dp"
        android:fontFamily="Arial"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/button_signup"
        android:onClick="home_screen_Login"
        android:background="#34cf95"
        android:fontFamily="Arial"
        android:layout_above="@+id/button_booknologin"
        android:layout_alignRight="@+id/button_booknologin"
        android:layout_below="@+id/login_password"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/logoText"
        android:layout_alignStart="@+id/logoText"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Book without login"
        android:id="@+id/button_booknologin"
        android:onClick="home_anonymousLogin"
        android:background="#756f7c"
        android:fontFamily="Arial"
        android:layout_below="@+id/button_login"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@mipmap/nv_menu"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/nv_back"
        android:clickable="true" />

</RelativeLayout>
