<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zackwang.testapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondScreen"
            android:label="@string/title_activity_second_screen"></activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"></activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"></activity>
        <activity
            android:name=".QueueingActivity"
            android:label="@string/title_activity_queueing"></activity>
        <activity
            android:name=".activities.HomeMenuActivity"
            android:label="@string/title_activity_home_menu"></activity>
        <activity
            android:name=".activities.BookActivity"
            android:label="@string/title_activity_book"></activity>
        <activity
            android:name=".activities.QueueTimeActivity"
            android:label="@string/title_activity_queue_time"></activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register"></activity>
        <activity
            android:name=".activities.SideMenuActivity"
            android:label="@string/title_activity_side_menu"></activity>
        <activity
            android:name=".activities.AvailableActivity"
            android:label="@string/title_activity_available"></activity>
        <activity
            android:name=".activities.AccountDetailActivity"
            android:label="@string/title_activity_account_detail"></activity>
        <activity
            android:name=".activities.MyReservationActivity"
            android:label="@string/title_activity_my_reservation"></activity>
        <activity
            android:name=".activities.PickTableActivity"
            android:label="@string/title_activity_pick_table"></activity>
    </application>

</manifest>
